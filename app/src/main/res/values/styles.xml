<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para el texto dentro de los CardView -->
    <style name="CardViewTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Estilo para el DetailsFragment -->
    <style name="DetailsFragmentNameStyle">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="DetailsFragmentStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="DetailsFragmentBodyStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
