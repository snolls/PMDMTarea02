<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para el texto dentro de los CardView -->
    <style name="CardViewTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo personalizado para la Toolbar -->
    <style name="CustomToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/red</item> <!-- Fondo rojo -->
        <item name="android:titleTextColor">@android:color/white</item> <!-- Texto blanco -->
        <item name="android:subtitleTextColor">@android:color/white</item> <!-- SubtÃ­tulos blancos -->
    </style>

    <!-- Estilo para el nombre en el DetailsFragment -->
    <style name="DetailsFragmentNameStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
